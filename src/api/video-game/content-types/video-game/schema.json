{
  "kind": "collectionType",
  "collectionName": "video_games",
  "info": {
    "singularName": "video-game",
    "pluralName": "video-games",
    "displayName": "Video Game",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": false,
      "maxLength": 150
    },
    "launch": {
      "type": "date"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "platforms": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::platform.platform",
      "inversedBy": "video_games"
    },
    "largeText": {
      "type": "text",
      "required": true
    }
  }
}
